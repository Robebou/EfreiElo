	</div>
	<!-- Script Compteur et redirection -->
	<script>
		var compte = 4;
			function decompte(){
				if(compte <= 1) {
						 pluriel = "";
				 }
				else {
					pluriel = "s";
				}
			document.getElementById("compt").innerHTML = compte + " seconde" + pluriel;
				if(compte == 0 || compte < 0) {
					compte = 0;
					clearInterval(timer);
					document.location.href="/index";
				}
			compte--;
		}
		var timer = setInterval('decompte()',1000);

		setTimeout(function(){
			window.history.back()
		}, 6000);
	 </script>

